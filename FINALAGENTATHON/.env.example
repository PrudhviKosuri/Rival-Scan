# PRODUCTION DEPLOYMENT CONFIGURATION
# Copy this file to .env and fill in your actual values

# REQUIRED: Google AI API Key for Gemini Integration
GOOGLE_API_KEY=your_google_api_key_here

# SERVER CONFIGURATION
# Port will be automatically detected from deployment platform (Railway, Render, etc.)
# Uncomment to override
# PORT=8000
# HOST=0.0.0.0

# CORS & SECURITY
# Set to your frontend domain in production
FRONTEND_URL=https://your-frontend-domain.com
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# APPLICATION METADATA
APP_NAME=ACIA-Backend
VERSION=1.0.0
ENVIRONMENT=production

# PERFORMANCE & TIMEOUTS
REQUEST_TIMEOUT=30
GEMINI_TIMEOUT=60
MAX_CONCURRENT_JOBS=10

# LOGGING
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# DATABASE (SQLite files - will be created automatically)
ORCHESTRATOR_DB=orchestrator_context.db
MANAGED_STORAGE_DB=managed_storage.db

# LEGACY AGENT URLS (Optional - not used in current implementation)
# AGENT_AC_URL=http://localhost:9001/agent_ac
# AGENT_AT_URL=http://localhost:9001/agent_at
# AGENT_PC_URL=http://localhost:9001/agent_pc
# AGENT_SC_URL=http://localhost:9001/agent_sc
# AGENT_PL_URL=http://localhost:9001/agent_pl
